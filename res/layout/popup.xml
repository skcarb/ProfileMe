<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="10dp"
	android:baselineAligned="false" android:layout_height="match_parent"
	android:layout_width="wrap_content" android:orientation="vertical"
	android:weightSum="1" android:background="#000000">
	<RelativeLayout android:id="@+id/ll2" android:layout_width="match_parent"
		android:orientation="vertical" android:layout_weight="0.9" android:weightSum="1" android:layout_height="0dp">
		<LinearLayout android:orientation="vertical" android:id="@+id/ll_one" android:layout_height="match_parent" android:layout_width="match_parent" android:gravity="center_vertical|center_horizontal">
			<ImageView android:id="@+id/image_full" android:scaleType="fitXY" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
		</LinearLayout>
		<LinearLayout android:orientation="vertical" android:id="@+id/ll_two" android:layout_height="match_parent" android:layout_width="match_parent" android:weightSum="1">
			<RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:id="@+id/pp1" android:visibility="invisible" android:layout_weight="0.75" android:layout_marginTop="20dp">
				<ImageView android:layout_height="match_parent" android:layout_width="match_parent"
	android:id="@+id/img_large" android:paddingTop="10dp"></ImageView>
				<ImageView android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:background="@drawable/cros" android:id="@+id/btn_small" android:layout_height="30dp" android:layout_alignTop="@+id/img_large" android:layout_width="32dp" android:layout_marginRight="30dp"></ImageView>
			</RelativeLayout>
			<RelativeLayout android:layout_height="0dp"
	android:id="@+id/pp2" android:visibility="invisible" android:layout_width="100dp" android:layout_marginLeft="5dp" android:layout_weight="0.25" android:layout_marginBottom="20dp">
				<ImageView android:layout_height="match_parent" android:layout_width="match_parent"
	android:id="@+id/img_click" android:paddingTop="8dp"></ImageView>
				<ImageView android:background="@drawable/large" android:id="@+id/btn_large" android:layout_alignTop="@+id/img_click" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_height="25dp" android:layout_width="25dp" android:layout_marginRight="3dp"></ImageView>
			</RelativeLayout>
		</LinearLayout>
		
	</RelativeLayout>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout2" android:layout_weight="0.1"
		android:layout_height="0dp" android:orientation="horizontal"
		android:weightSum="1" android:background="@drawable/bottommenubg"
		android:paddingBottom="5dp" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:paddingTop="5dp" android:gravity="center_vertical">
		<LinearLayout android:layout_width="0dp" android:id="@+id/linearLayout1"
			android:layout_height="match_parent" android:orientation="vertical"
			android:gravity="center_vertical" android:layout_weight="0.4">
			<Button android:layout_height="wrap_content" android:id="@+id/btn_cam"
				android:layout_width="wrap_content" android:background="@drawable/btncamera"></Button>
		</LinearLayout>
		<LinearLayout android:id="@+id/yy6" android:layout_width="0dp"
			android:layout_height="match_parent" android:weightSum="1"
			android:gravity="center_vertical" android:layout_weight="0.6">
			<Button android:layout_height="wrap_content"
				android:background="@drawable/close" android:id="@+id/btn_can"
				android:layout_width="0dp" android:layout_weight="0.3"></Button>
			<Button android:id="@+id/btn_choose" android:layout_width="0dp"
				android:layout_height="wrap_content" android:background="@drawable/choose"
				android:layout_weight="0.7"></Button>
		</LinearLayout>

	</LinearLayout>


</LinearLayout>
