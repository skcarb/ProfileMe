<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:id="@+id/LinearLayout1"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:weightSum="1" tools:context=".MainActivity"
	android:background="@drawable/background">
	<LinearLayout android:id="@+id/LinearLayout2"
		android:layout_width="match_parent" android:layout_weight="0.1"
		android:background="@drawable/backgroundchoosetrait"
		android:layout_height="0dp" android:gravity="center_vertical">

		<LinearLayout
		    android:id="@+id/ww1"
		    android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="0.3" android:paddingBottom="5dp" android:paddingLeft="5dp" android:paddingTop="5dp">
		    <Button android:id="@+id/btn_back" android:layout_height="wrap_content"
	android:background="@drawable/back_new" android:layout_width="wrap_content" />
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/ww2"
		    android:layout_height="wrap_content" android:layout_weight="0.4" android:layout_width="0dp" android:gravity="center_vertical|center_horizontal" android:layout_gravity="center_vertical">
		    <TextView
    		android:id="@+id/textView1" 
    		android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:text="PROFILE ME"
    			android:textColor="#000000" 
    			android:textSize="@dimen/title_normal" />
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout3" android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="0.3" android:layout_width="0dp"></LinearLayout>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="0dp" android:layout_weight="0.1"
		android:gravity="center_vertical" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:weightSum="1">

		<TextView android:id="@+id/textView6" android:textSize="@dimen/text_two_normal"
			android:layout_width="0dp" android:layout_height="wrap_content"
			android:gravity="right" android:text="Trait 7 -"
			android:layout_weight="0.3" />

		<TextView android:id="@+id/textView7" android:layout_width="0dp"
			android:layout_height="wrap_content" android:textSize="@dimen/text_normal"
			android:gravity="center_vertical|center_horizontal" android:text="MAGNETISM"
			android:layout_weight="0.4" />

		<TextView android:id="@+id/textView8" android:layout_width="0dp"
			android:layout_height="wrap_content" android:gravity="left"
			android:textSize="@dimen/text_two_normal" android:layout_weight="0.3"
			android:text=" Step 7 of 7" />

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="0dp" android:weightSum="1"
		android:layout_weight="0.45" android:orientation="horizontal"
		android:background="#ffffff">

		<ImageView android:layout_height="match_parent"
			android:layout_width="0dp" android:layout_weight="0.5"

			android:layout_marginRight="5dp" android:id="@+id/img_one" />
		<ImageView android:layout_width="0dp" android:layout_weight="0.5"
			android:layout_height="match_parent" android:id="@+id/img_two">
		</ImageView>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="0dp" android:orientation="horizontal"
		android:paddingLeft="5dp" android:paddingRight="5dp"
		android:weightSum="1" android:layout_weight="0.15"
		android:background="@drawable/backgroundchoosetrait" android:gravity="center">
		<TextView android:id="@+id/textView2" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Choose Trait" android:textColor="#000000"></TextView>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="0dp" android:gravity="center_vertical"
		android:orientation="horizontal" android:weightSum="1"
		android:layout_weight="0.1" android:paddingTop="5dp"
		android:paddingBottom="5dp" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:background="@drawable/backgroundnavigation">

		<LinearLayout android:layout_width="0dp"
			android:layout_height="match_parent" android:orientation="horizontal"
			android:weightSum="1" android:layout_weight="0.6" android:gravity="center_vertical">

			<Button android:layout_width="0dp" android:layout_height="wrap_content"
				android:id="@+id/btn_description"
				android:background="@drawable/buttontraitdescription" android:layout_weight="0.6"/>

			<Button android:layout_width="0dp" android:layout_height="wrap_content"
				android:id="@+id/btn_video"
				android:background="@drawable/buttonwatchvideol" android:layout_weight="0.4"/>

		</LinearLayout>

		<LinearLayout android:layout_width="0dp"
			android:layout_height="match_parent" android:orientation="vertical"
			android:layout_weight="0.2" android:gravity="right|center_vertical">
			<Button android:id="@+id/btn_pre"
				android:background="@drawable/back" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>

		</LinearLayout>

		<LinearLayout
		    android:id="@+id/ee1"
		    android:orientation="vertical"
		    android:layout_weight="0.2" android:layout_width="0dp" android:layout_height="match_parent" android:gravity="left|center_vertical">
		    <Button android:layout_height="wrap_content"
    			android:id="@+id/btn_next"
    			android:background="@drawable/buttonnext" android:layout_width="wrap_content"/>
		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="0dp" android:orientation="horizontal"
		android:weightSum="1" android:layout_weight="0.1" android:background="@drawable/bottommenubg">

		<LinearLayout android:id="@+id/ll1" android:layout_width="0dp"
			android:layout_height="match_parent" android:layout_weight="0.25">
			<Button android:id="@+id/btn_welcome" android:layout_width="match_parent"
				android:layout_height="match_parent" android:background="@drawable/bottommenuwelcome" />
		</LinearLayout>

		<LinearLayout android:id="@+id/ll1" android:layout_width="0dp"
			android:layout_height="match_parent" android:layout_weight="0.25">
			<Button android:id="@+id/btn_howItWork" android:layout_width="match_parent"
				android:layout_height="match_parent" android:background="@drawable/bottommenuhowitworks" />
		</LinearLayout>

		<LinearLayout android:id="@+id/ll1" android:layout_width="0dp"
			android:layout_height="match_parent" android:layout_weight="0.25">
			<Button android:id="@+id/btn_tellAFriend"
				android:layout_width="match_parent" android:layout_height="match_parent"
				android:background="@drawable/bottommenutellafiend" />
		</LinearLayout>

		<LinearLayout android:id="@+id/ll1" android:layout_width="0dp"
			android:layout_height="match_parent" android:layout_weight="0.25">
			<Button android:id="@+id/btn_more" android:layout_width="match_parent"
				android:layout_height="match_parent" android:background="@drawable/bottommenumore" />
		</LinearLayout>

	</LinearLayout>

</LinearLayout>