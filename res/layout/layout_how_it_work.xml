<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity" android:background="@drawable/background">

	<LinearLayout android:id="@+id/LinearLayout2"
		android:layout_width="match_parent" android:layout_weight="0.1"
		android:background="@drawable/backgroundchoosetrait"
		android:layout_height="0dp" android:gravity="center_vertical">

		<LinearLayout
		    android:id="@+id/ww1"
		    android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="0.3" android:paddingBottom="5dp" android:paddingLeft="5dp" android:paddingTop="5dp">
		    <Button android:id="@+id/btn_back" android:layout_height="wrap_content"
	android:background="@drawable/back_new" android:layout_width="wrap_content" />
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/ww2"
		    android:layout_height="wrap_content" android:layout_weight="0.4" android:layout_width="0dp" android:gravity="center_vertical|center_horizontal" android:layout_gravity="center_vertical">
		    <TextView
    		android:id="@+id/textView1" 
    		android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:text="PROFILE ME"
    			android:textColor="#000000" 
    			android:textSize="@dimen/title_normal" />
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout3" android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="0.3" android:layout_width="0dp"></LinearLayout>

	</LinearLayout>

    <RelativeLayout android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:weightSum="1" android:layout_weight="0.4" android:layout_height="0dp" android:background="#ffffff">
        <VideoView android:layout_alignParentBottom="true"
	android:layout_alignParentTop="true" 
	android:layout_alignParentLeft="true" 
	android:layout_alignParentRight="true" 
	android:id="@+id/videoView1"
	android:layout_height="match_parent" android:layout_width="match_parent"></VideoView>
        <LinearLayout android:orientation="vertical" android:background="@drawable/play" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:id="@+id/ll_click" android:layout_height="wrap_content" android:layout_width="wrap_content"></LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:weightSum="1" android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="@dimen/text_normal"
            android:text="Welcome to Profile Me" 
            android:layout_gravity="center_vertical|center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:gravity="top|center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="1" >
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
            <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:text="@string/app_hw_it_works"
                android:id="@+id/textView3" 
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  android:textSize="@dimen/text_two_normal"
                 >
                 </TextView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/btn_GetStarted"
            android:layout_width="match_parent"
            android:background="@drawable/buttongetstarted" android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" android:background="@drawable/bottommenubg">

        <Button
            android:id="@+id/btn_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottommenuwelcome"/>

        <Button
            android:id="@+id/btn_howItWork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottommenuhowitworks"/>

        <Button
            android:id="@+id/btn_tellAFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottommenutellafiend"/>

        <Button
            android:id="@+id/btn_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottommenumore"/>

    </LinearLayout>

</LinearLayout>